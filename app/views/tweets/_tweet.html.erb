<div class="col-xs-8">
  <% if user_signed_in? %>
<div class="card">
  <div class="card-body">
    <div class="card-header text-right"> 
      <%= tweet.user.handle %>, on 
      <%= tweet.created_at.strftime("%B %d %Y, %l:%M%P") %>
    </div>
    <div class="card-text text-start"><%= tweet.message %></div>
      <div class="card-footer text-end bg-white border-0">
        <% liked = Like.find_by( tweet: tweet, user: current_user ) != nil %>
        <% btn_color = liked ? "warning" : "default" %>
        <%= link_to "👍", tweet_likes_path( tweet ), method: :post, class: "btn btn-#{btn_color} btn-xs", disabled: !user_signed_in? %>
        <%= tweet.likes.count %>
      </div>
    <div>
      <%= link_to "Leave a Comment", tweet_path( tweet ) %>
    </div>
    <div>
      <% if current_user.id == tweet.user_id %>
      <%= link_to "Edit Tweet", edit_tweet_path( tweet ) %>
      <%= link_to "Delete Tweet", tweet_path( tweet ), method: :delete, data: { confirm: "Are you sure?" } %>
    </div>
    <% end %>
    &nbsp
 
  <% else %>
  <div class="card-header text-right"> 
    <%= tweet.user.handle %>, on 
    <%= tweet.created_at.strftime("%B %d %Y, %l:%M%P") %>
  </div>
  <div class="card-text text-start"><%= tweet.message %></div>
    <div class="card-footer text-end bg-white border-0">
      <% liked = Like.find_by( tweet: tweet, user: current_user ) != nil %>
      <% btn_color = liked ? "warning" : "default" %>
      <%= link_to "👍", tweet_likes_path( tweet ), method: :post, class: "btn btn-#{btn_color} btn-xs", disabled: !user_signed_in? %>
      <%= tweet.likes.count %>
    </div>
  <div>
    <%= link_to "Leave a Comment", tweet_path( tweet ) %>
  </div>

  &nbsp
  <% end %>
  </div>
</div>
</div>