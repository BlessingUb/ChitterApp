<%= form_for Tweet.new do |form| %>
  <div class="input-group col-xs-12">
    <div class="col-xs-8"><%= form.text_area :message, class: "form-control", placeholder: "What's happening" %></div>
    <div class="col-xs-4"><%= form.submit "Tweet", class: "btn btn-primary btn-lg" %></div>
  </div>
<% end %>
