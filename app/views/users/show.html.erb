
<h1><%= nick_name%></h1>
<section id="all-links">
<% if current_user == @user %>
   <h5><%= "Welcome home #{current_user.username}" %></h5>
<% elsif current_user.followees.include?(@user) %>
   <h5><%= button_to "UnFollow ",     
       unfollow_user_path, method: "POST" %></h5>
<% else %>
   <h5><%= button_to "Follow ", follow_user_path, 
       method: "POST"  %></h5>
<% end %>
    <br>
</section>
<div>
    <div><%= @user.bio %>
    </br>
    <%= @user.location %>
    </div>
</div>
<% if current_user.id == @user.id %>
<%= link_to " Edit Profile ", edit_user_registration_path(current_user)%>
<% end %>
<div>
    <% if @user.tweets.any? %>
    <% @user.tweets.each do |tweet| %>
    <%= tweet.message  %>
    <br>
    <%= tweet.created_at.strftime("%B %d %Y, %l:%M%P") %>
    <% end %>
    </div>
    <% end %>
